{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}

{% block body %}
{{parent()}}
<link href="https://fonts.googleapis.com/css2?family=PT+Sans&display=swap" rel="stylesheet">

<div class="container">
    <div class="row">
    {% for post in pagination %}
        <div class="col-md-3 cursor">
            <div class="bg-white rounded p-3 my-3" id="greybackground" onclick="window.location.href='{{path('posts_show',{id:post.id})}}'">
                <div class="d-flex bd-highlight rounded h-50" >
                    <div class="p-2 flex-grow-1 bd-highlight ">
                        <h3>{{post.name}}</h3>
                        <div class="align-self-center">
                            <img class="rounded hoverable" src="{{ asset('uploads/fotos/'~post.foto)}}" width="100%" height="175px">
                        </div>
                        <div 
                        <div class="bg-green"><i class="far fa-clock"></i><strong>Fecha de publicaci√≥n: {{ post.fecha_publicacion | date}}</strong></div>
                    </div>
                </div>
            </div>
            <hr>
        </div>
        {% endfor %}
    </div>
</div>
<div class="d-flex justif-content-center">
    <div class="navigation">
        {{knp_pagination_render(pagination)}}
    </div>
</div>

{% endblock %}
