{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}

{% block body %}
{{parent()}}
           {% if app.user %}
                <div class="mb-3" style="text-align:right">
                    <p>Hola {{ app.user.nombre }} ! </p> 
                    <a href="{{ path('app_logout') }}" style="font-size:10px">Salir</a>
                </div>
            {% endif %}
<div class="container">
    <div class="row postsRow">
            <div class="col-md-4 cursor">
                <div class="bg-white rounded">
                    <img class="rounded hoverable" src="{{ asset('img/pijamaa.jpg')}}" width="100%" height="450px">
                </div>
            </div>
            <div class="col-md-4 cursor">
                <div class="bg-white rounded">
                    <img class="rounded hoverable" src="{{ asset('img/sujetadorR.jpg')}}" width="100%" height="450px">
                </div>
            </div>
            <div class="col-md-4 cursor">
                <div class="bg-white rounded">
                    <img class="rounded hoverable" src="{{ asset('img/topp.jpg')}}" width="100%" height="450px">
                </div>
            </div>
        {% for post in pagination %}
            <div class="col-md-3 cursor">
                <div class="bg-white rounded" onclick="window.location.href='{{path('posts_show',{id:post.id})}}'">
                    <h5>{{post.name}}</h5>
                        <div class="align-self-center">
                            <img class="rounded hoverable" src="{{ asset('uploads/fotos/'~post.foto)}}" width="90%" height="175px">
                                <div class="text-center">
                                <p class="my-2 postTextSize"> Antes : <s>{{post.precioAntes}}</s> <span id="colorRed">Ahora : {{post.precio}} €</span>
                                    <button type="button" class="btn btn-light btn-sm">
                                        <i class="fas fa-cart-arrow-down"></i>
                                    </button>
                                    </p>
                                </div>
                                <div class="publicationDate text-center">

                                    <p><i class="far fa-clock" style="color:#000"></i>
                                     Fecha de publicación: {{ post.fechaPublicacion | date}}</p>
                                </div>
                        </div>
                    <hr>
                </div>      
            </div>
        {% endfor %}
    </div>
</div>
<div class="d-flex justif-content-center">
    <div class="navigation">
        {{knp_pagination_render(pagination)}}
    </div>
</div>

{% endblock %}
