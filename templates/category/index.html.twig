{% extends 'base.html.twig' %}

{% block title %}    {{parent()}}- Categorías{% endblock %}

{% block body %}
{{parent()}}

<div class="container">
    <h3>Todas las categorías</h3>
    <div class="row postsRow">
        {% for category in pagination  %}
            <div class="col-md-3 cursor">
                <div class="bg-white rounded" onclick="window.location.href='/categoria/{{category.id}}/index'">
                    <h3>{{category.name}}</h3>
                        <div class="align-self-center">
                            <img class="rounded hoverable" src="{{ asset('uploads/fotos/'~category.foto)}}" width="90%" height="175px">
                        </div>
                    <hr>
                </div>      
            </div>
             {% else %}
            <tr>
                <td colspan="3">No hay categorías</td>
            </tr>
        {% endfor %}
        <a href="{{ path('category_new') }}">Crear nueva categoría</a>
    </div>
</div>
<div class="d-flex justif-content-center">
    <div class="navigation">
        {{knp_pagination_render(pagination)}}
    </div>
</div>
{% endblock %}
