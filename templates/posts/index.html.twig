{% extends 'base.html.twig' %}

{% block title %}    {{parent()}}- Artículos{% endblock %}

{% block body %}
{{parent()}}
<div class="container">
    <div class="jumbotron">
        <div class="container">
                <h5><a href="{{ path('category_index')}}">Buscar por categorias</a></h5>
            <hr>
            <br>
                <h5>Buscar por nombre</h5>
                    {{ render(controller('App\\Controller\\PostsController:searchbar')) }}
            <br>
            <h5>Filtrar por precio</h5>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.minPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    <button class="btn btn-primary">Buscar</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <h3>Todos los artículos</h3>
    <div class="row postsRow">
        {% for post in pagination %}
            <div class="col-md-3 cursor">
                <div class="bg-white rounded" onclick="window.location.href='{{path('posts_show',{id:post.id})}}'">
                    <h3>{{post.name}}</h3>
                        <div class="align-self-center">
                            <img class="rounded hoverable" src="{{ asset('uploads/fotos/'~post.foto)}}" width="90%" height="175px">
                                <div class="text-center postTextSize">
                                <p class="my-2"> Unidad : {{post.precioAntes}} <span id="colorRed">Paquete : {{post.precio}} €</span>
                                    <button type="button" class="btn btn-light btn-sm">
                                        <i class="fas fa-cart-arrow-down"></i>
                                    </button>
                                    </p>
                                </div>
                                <div class="publicationDate">
                                    <br>
                                    <p><i class="far fa-clock" style="color:#000"></i>
                                     Fecha de publicación: {{ post.fechaPublicacion | date}}</p>
                                </div>
                        </div>
                    <hr>
                </div>      
            </div>
        {% endfor %}
    </div>
</div>
<div class="d-flex justif-content-center">
    <div class="navigation">
        {{knp_pagination_render(pagination)}}
    </div>
</div>
{% endblock %}
